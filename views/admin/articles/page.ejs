<!-- This includ part of header -->
<%- include ('../../parts/header') %>
    <!-- This includ part of homevavbar -->
    <%- include ('../../parts/homenavbar') %>
        <div class="container mt-5">
            <!-- That starts looping the articles -->
            <% result.articles.rows.forEach(article=> { %>
                <div class="card">
                    <div class="card-header">
                        <%= article.title %>
                    </div>
                    <div class="card-body">
                        <a href="/<%= article.slug %> " class="btn btn-success">Ler</a>
                    </div>
                </div>
                <% }) %>
                    <!-- end looping of articles -->
                    <!-- Paginator -->
<div class="row">
    <div class="col col-12">
            <% if (result.page > 2) { %>
                <a class="float-start" href="/articles/page/<%= result.page - 1 %>"> <<< Prev </a>
            <% }else if((result.page == 2)){ %>
                <a class="float-start" href="/"%>"><<< Prev </a>
            <%}%>
            <% if (result.next) { %>
                <a class="float-end" href="/articles/page/<%= result.page + 1 %>">Next >>></a>
            <% } %>
    </div>
</div>
<hr>
                    <!-- End paginator -->
        </div>
        <!-- This includ part of footer -->
        <%- include ('../../parts/footer') %>
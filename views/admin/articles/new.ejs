<%- include('../../parts/header.ejs') %>
    <%- include('../../parts/nav.ejs') %>
        <div class="container">
            <div class="card mt-3">
                <div class="card-header">
                    <h2>Novo Artigo</h2>
                </div>
                <div class="card-body">
                    <form method="POST" action="/article/save">
                        <div class="mb-3">
                            <input class="form-control mb-2" placeholder="Defina o titulo do artigo" name="title" type="text">
                            <label>Categorias</label>
                            <select name="category" class="form-control mb-2">
                                <% categories.forEach(category => { %>
                                    <option value="<%= category.id %>"><%= category.title %> </option>
                                <% }) %> 
                            </select>
                            <textarea class="form-control mt-3" name="body" id="article" placeholder="Escreva o artigo aqui!!" cols="30"
                                rows="15"></textarea>
                        </div>
                        <button type="submit" class="btn btn-success">Cadastrar</button>
                    </form>
                </div>
            </div>
        </div>
        <%- include('../../parts/footer.ejs') %>
        <script src="/tinymce/tinymce.min.js"></script>
        <script>
            tinymce.init({
                language:'pt_BR',
                selector:"#article",
                plugins:[
                    'advlist autolink link image lists print preview hr searchreplace wordcount fullscreen insertdatetime media save table paste emoticons'
                ]
            })
        </script>
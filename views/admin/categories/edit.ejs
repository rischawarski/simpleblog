    <%- include('../../parts/nav.ejs') %>

        <div class="container">
            <div class="card mt-3">
                <div class="card-header">
                    <h2>Edição de Categorias</h2>
                </div>
                <div class="card-body">
                    <form method="POST" action="/categories/update">
                        <div class="mb-3">
                            <label for="" class="form-label">Titulo da Categoria</label>
                            <input class="form-control" name="title" type="text" value="<%= category.title%>">
                            <input type="hidden" name="id" value="<%= category.id%>">
                        </div>
                        <button type="submit" class="btn btn-success">Atualizar</button>
                    </form>
                </div>
            </div>
        </div>


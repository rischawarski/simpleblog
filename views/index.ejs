<!-- This includ part of header -->
<%- include ('parts/header') %> 
<!-- This create classs jumbotron style -->
<style type="text/css">
    .jumbotron {
        padding: 4rem 2rem;
        margin-top: -3rem;
        margin-bottom: -3rem;
        background-color: var(--bs-light);
        border-radius: .3rem;
    }
</style>
<!-- This includ part of homevavbar -->
<%- include ('parts/homenavbar') %> 
<div class="container">
    <div class="jumbotron">
        <h1 class="display-4">Simple Blog RMT</h1>
        <p class="lead">This is a simple blog made nodejs for learn CRUD.</p>
        <hr class="my-1 ">
    </div>
        <!-- That starts looping the articles -->
    <% articles.forEach(article => { %>
        <div class="card">
            <div class="card-header">
                <%= article.title %> 
            </div>
            <div class="card-body">
                <a href="/<%= article.slug %> " class="btn btn-success">Ler</a>
            </div>

        </div>
    <% }) %>
    <!-- end looping of articles -->
        <div class="row">
            <div class="col col-12">
                    <a class="float-end" href="/articles/page/2">Next>>></a>
            </div>
        </div>
        <hr>
</div>
<!-- This includ part of footer -->
<%- include ('parts/footer') %>



